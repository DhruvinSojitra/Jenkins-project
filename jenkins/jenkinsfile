pipeline {
    agent{
        label 'devops'
    }
    stages{
        stage('App code checkout'){
            steps{
                git url: 'https://github.com/DhruvinSojitra/Jenkins-project.git', branch:'main'
            }
        }
        stage('Build image'){
            steps{
                sh 'docker build -t jenkins:latest .'
            }
        }
        stage('container create') {
            steps{
                sh 'docker run -sit --name jenkinsapp -p 8088:80 jenkinsapp:latest'
            }
        }
    }

}